require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('geopod', '0.0.2') do |p|
    p.author = "Indie Energy Systems"
    p.email = "software@indieenergy.com"
    p.description    = "A client for the Indie Energy Systems Geopod API"
    p.ignore_pattern = ["tmp/*", "script/*"]
    p.dependencies = ["json", "oauth"]
end


